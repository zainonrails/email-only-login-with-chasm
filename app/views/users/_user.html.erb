<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Verified:</strong>
    <%= user.verified %>
  </p>

  <p>
    <strong>Session token:</strong>
    <%= user.session_token %>
  </p>

</div>
